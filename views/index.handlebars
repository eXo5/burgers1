

<div class="row">
<center>
	<div class="col-md-6">
		<h3 class="burgers">Burgers To Devour</h3>
			<div id="readyEat">
				{{#each burgers}}
					
					<form action="burger/eat/{{id}}" method="post">
						<div class="input-group">
							<li class="form-control">{{id}}. {{burger_name}}</li>
